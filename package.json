{
  "name": "subtitler",
  "productName": "Subtitler",
  "version": "1.0.0",
  "description": "Electron app to edit subtitles files.",
  "repository": {
    "type": "git",
    "url": "https://github.com/david-mk-lawrence/subtitler"
  },
  "main": "./.webpack/main",
  "scripts": {
    "lint": "eslint --ext .ts,.tsx ./src",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run test-electron && npm run test-react",
    "test-electron": "jest --config=jest.electron.config.js",
    "test-react": "jest --config=jest.react.config.js",
    "prettier": "prettier --config ./.prettierrc.js --write './src/**/*.{js,jsx,scss,json,ts,tsx}' './*.js'",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish"
  },
  "sideEffects": [
    "*.css"
  ],
  "browserslist": [
    "last 2 electron version"
  ],
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-react": "^7.17.12",
    "@babel/preset-typescript": "^7.17.12",
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "@electron-forge/plugin-webpack": "^6.0.0-beta.63",
    "@tailwindcss/forms": "^0.5.2",
    "@types/electron-devtools-installer": "^2.2.2",
    "@types/graceful-fs": "^4.1.5",
    "@types/i18n": "^0.13.3",
    "@types/jest": "^28.1.3",
    "@types/lodash": "^4.14.182",
    "@types/react": "^18.0.10",
    "@types/react-dom": "^18.0.5",
    "@types/react-router-dom": "^5.3.3",
    "@types/write-file-atomic": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "autoprefixer": "^10.4.7",
    "babel-loader": "^8.2.2",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^5.2.0",
    "electron": "^19.0.1",
    "electron-reloader": "^1.2.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.1",
    "node-loader": "^2.0.0",
    "postcss-loader": "^7.0.0",
    "prettier": "^2.6.2",
    "style-loader": "^3.3.1",
    "tailwindcss": "^3.0.24",
    "ts-loader": "^9.3.0",
    "typescript": "^4.7.2",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.9.1"
  },
  "dependencies": {
    "@headlessui/react": "^1.6.5",
    "@heroicons/react": "^1.0.6",
    "@reduxjs/toolkit": "^1.8.2",
    "ajv": "^8.11.0",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.4.5",
    "electron-squirrel-startup": "^1.0.0",
    "fork-ts-checker-webpack-plugin": "^7.2.11",
    "graceful-fs": "^4.2.10",
    "i18n": "^0.15.0",
    "i18next": "^21.8.10",
    "lodash": "^4.17.21",
    "postcss": "^8.4.14",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-i18next": "^11.17.2",
    "react-redux": "^8.0.2",
    "react-router-dom": "^6.3.0",
    "redux-undo": "^1.0.1",
    "write-file-atomic": "^4.0.1"
  },
  "config": {
    "forge": {
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "devContentSecurityPolicy": "`default-src 'self' 'unsafe-inline' data:; script-src 'self' 'unsafe-eval' 'unsafe-inline' data:`",
            "mainConfig": "./webpack.electron.js",
            "renderer": {
              "config": "./webpack.react.js",
              "entryPoints": [
                {
                  "name": "main_window",
                  "html": "./src/renderer/index.html",
                  "js": "./src/renderer/index.tsx",
                  "preload": {
                    "js": "./src/preload.ts"
                  }
                }
              ]
            }
          }
        ]
      ],
      "packagerConfig": {
        "icon": "./assets/icons/icon",
        "protocols": [
          {
            "name": "Subtitler",
            "schemes": [
              "subtitler"
            ]
          }
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "Subtitler"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "mimeType": [
              "x-scheme-handler/subtitler"
            ]
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "david-mk-lawrence",
              "name": "subtitler"
            },
            "prerelease": true
          }
        }
      ]
    }
  }
}
